<div class="row">
  <div class="large-5 columns">
    <h1>Flirt <%= image_tag 'wink.jpg', :class=>'logo' %></h1>
  </div>
  <div class="large-7 columns">
    <ul class="button-group right">
      <li><%= link_to 'Home', root_path, :class => 'button' %></li>
      <% if @auth.nil? %>
        <li><%= link_to 'Register', new_subscriber_path, :remote => true, :class => 'button' %></li>
        <li><%= link_to 'Login', login_path, :remote=>true, :class => 'button' %></li>
      <% else %>
        <% if @subscriber.present? && @subscriber.has_subscription? %>
          <li><%= link_to 'Profile', '#', :class => 'button' %></li>
        <% end %>
        <li><%= link_to @auth.username, login_path, :method => :delete, :class => 'button alert', :remote => true %></li>
      <% end %>
    </ul>
  </div>
</div>