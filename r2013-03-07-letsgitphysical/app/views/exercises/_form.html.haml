.row
  .small-5.columns
    = form_for @exercise, :remote => true do |f|
      = f.label :activity
      = f.text_field :activity, :autofocus => true
      = f.label :value
      = f.text_field :value
      = f.label :unit
      = f.text_field :unit
      = f.label :completed, 'Date Completed'
      = f.text_field :completed
      = f.submit nil, :class => 'button radius tiny success'
  .small-7.columns
