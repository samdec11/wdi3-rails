%h1#title scrabble-rousers
%nav.top-bar
  %ul.title-area
    %li.name
      %h1= link_to 'Home', root_path
    %li.toggle-topbar.menu-icon
      %a{:href => "#"}
        %span Menu
  %section.top-bar-section
    - if @auth.present?
      %ul.left
        %li.divider
        %li= link_to "Hi, #{@auth.username}!", '#'
    %ul.right
      %li.divider
      %li
        - if @auth.nil?
          = form_tag '/login', :remote => true, :id =>'login_form' do
            = text_field_tag :username, nil, :placeholder => 'Username'
            = submit_tag 'Login', :class => 'button success', :id => 'login_button'
        - else
          = link_to 'Logout', '/login', :method => :delete, :remote => true