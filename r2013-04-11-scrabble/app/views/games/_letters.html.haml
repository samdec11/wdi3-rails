%h4 Letters
%table#letters
  %tr
    - ("A".."Z").to_a.sample(7).each do |x|
      %td.letters= x
- if @auth.username == @game.current_player
  = form_tag '/games/end_turn', :remote => true do
    = hidden_field_tag :current_player, @game.current_player
    = hidden_field_tag :game_id, @game.id
    = submit_tag 'End Turn', :class => 'button small alert'