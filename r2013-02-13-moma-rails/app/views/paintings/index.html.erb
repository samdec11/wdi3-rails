<% @paintings.each do |painting| %>
  <div class='container'>
    <%= image_tag(painting.image, :class => 'index') %>
  <ul>
    <li><%= link_to painting.title, painting %></li>
    <li><%= painting.year %></li>
    <li><%= painting.medium %></li>
    <li><%= painting.style %></li>
  </ul>
</div>
<% end %>