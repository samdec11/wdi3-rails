<section>
  <%= image_tag @author.image, :class => 'show' %>
  <ul>
    <li><%= @author.name %></li>
    <li><%= @author.dob.strftime("Born %b %d, %Y") %></li>
    <li><%= @author.place_of_birth %></li>
    <% if @author.dod != nil %>
    <br>
    <li><%= @author.dod.strftime("Died %b %d, %Y") %></li>
    <li><%= @author.place_of_death %></li>
    <% end %>
  </ul>
</section>

<div class='links'>
<%= link_to 'Delete', @author, :method => :delete, :confirm => 'Okay to delete?' %>
<%= link_to 'Edit', edit_author_path(@author) %>
</div>

<% @author.books.each do |book| %>
<ul>
  <li><%= link_to image_tag(book.image, :class =>'thumbnail'), book %></li>
</ul>
<% end %>
