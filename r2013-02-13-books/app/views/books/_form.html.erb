<%= form_for @book do |f| %>
  <%= f.select :author_id, Author.all.map{|author| [author.name, author.id]}, :include_blank => true, :prompt => "Pick Author" %><br>
  <%= f.text_field :title %>
  <%= f.label :title %><br>
  <%= f.text_field :year %>
  <%= f.label :year %><br>
  <%= f.text_field :genre %>
  <%= f.label :genre %><br>
  <%= f.text_field :image %>
  <%= f.label :image %><br>
  <%= f.submit %>
<% end %>